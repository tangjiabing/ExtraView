<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/extra_linearlayout_root_padding_gallery_item" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/extra_imageview_wh_gallery_item"
            android:layout_height="@dimen/extra_imageview_wh_gallery_item"
            android:scaleType="centerInside" />

        <LinearLayout
            android:id="@+id/maskLinearLayout"
            android:layout_width="@dimen/extra_linearlayout_mask_wh_gallery_item"
            android:layout_height="@dimen/extra_linearlayout_mask_wh_gallery_item"
            android:background="@color/extra_linearlayout_mask_bg_gallery_item"
            android:orientation="vertical"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/nameText"
        android:layout_width="@dimen/extra_textview_name_width_gallery_item"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/extra_textview_name_margin_t_gallery_item"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/extra_textview_name_textcolor_gallery_item"
        android:textSize="@dimen/extra_font_textview_name_gallery_item" />

</LinearLayout>