<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/extra_linearlayout_root_bg_dialog"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/extra_linearlayout_title_bg_dialog"
        android:orientation="vertical"
        android:paddingBottom="@dimen/extra_linearlayout_title_padding_tb_dialog"
        android:paddingLeft="@dimen/extra_linearlayout_title_padding_lr_dialog"
        android:paddingRight="@dimen/extra_linearlayout_title_padding_lr_dialog"
        android:paddingTop="@dimen/extra_linearlayout_title_padding_tb_dialog" >

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/extra_textview_title_textcolor_dialog"
            android:textSize="@dimen/extra_font_textview_title_dialog" />
    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>